<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/RegisterActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/logogeneric" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="5">

        <TextView
            android:id="@+id/registerTextName"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:text="Name: " />

        <EditText
            android:id="@+id/registerEditName"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:hint="Name"
            android:singleLine="true"
            android:maxWidth="50dp"/>

        <TextView
            android:id="@+id/registerTextEmail"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:text="Email: " />

        <EditText
            android:id="@+id/registerEditEmail"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:hint="Email"
            android:singleLine="true"
            android:maxWidth="50dp"/>

        <TextView
            android:id="@+id/registerTextUsername"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:text="Username: "/>

        <EditText
            android:id="@+id/registerEditUsername"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:hint="Username"
            android:singleLine="true"
            android:maxWidth="50dp"/>

        <TextView
            android:id="@+id/registerTextPassword"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:text="Password: " />

        <EditText
            android:id="@+id/registerEditPassword"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:maxWidth="50dp"/>

        <TextView
            android:id="@+id/registerTextConfirmPassword"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:text="Confirm Password: " />

        <EditText
            android:id="@+id/registerEditConfirmPassword"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:ems="10"
            android:hint="Enter your password again"
            android:inputType="textPassword"
            android:singleLine="true"
            android:maxWidth="50dp"/>

    </GridLayout>

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttondesign"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />

</LinearLayout>